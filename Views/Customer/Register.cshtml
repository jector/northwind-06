@model Customer

<div class="justify-content-center row p-4 m-2 mt-4 bg-body-tertiary rounded-3 border">
    <h4 class="col-md-8">Add Customer</h4>
    <hr class="col-md-8">
    <form class="col-md-8" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="@Model.CompanyName">Company Name: </label>
            <input type="text" class="form-control" asp-for="@Model.CompanyName" placeholder="Company Name" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Address">Address: </label>
            <input type="text" class="form-control" asp-for="@Model.Address" placeholder="1234 Main St" />
        </div>
        <div class="form-row row">
            <div class="form-group col-md-4">
                <label asp-for="@Model.City">City: </label>
                <input type="text" class="form-control" asp-for="@Model.City" placeholder="City" />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="@Model.Region">Region: </label>
                <input type="text" class="form-control" asp-for="@Model.Region" placeholder="Region" />
            </div>
            <div class="form-group col-md-2">
                <label asp-for="@Model.PostalCode">PostalCode: </label>
                <input type="text" class="form-control" asp-for="@Model.PostalCode" placeholder="PostalCode" />
            </div>
            <div class="form-group col-md-2">
                <label asp-for="@Model.Country">Country: </label>
                <input type="text" class="form-control" asp-for="@Model.Country" placeholder="Country" />
            </div>
        </div>
        <div class="form-row row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.Phone">Phone: </label>
                <input type="text" class="form-control" asp-for="@Model.Phone" placeholder="Phone" />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.Fax">Fax: </label>
                <input type="text" class="form-control" asp-for="@Model.Fax" placeholder="Fax" />
            </div>
        </div>
        <button class="btn btn-primary" type="submit">New Customer</button>
    </form>
    <div class="col-md-8" >
     <hr>
     <a asp-controller="Customer" asp-action="Index">See all customer >></a>
    </div>
    
</div>

