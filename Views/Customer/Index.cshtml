@model IEnumerable<Customer>
<div class="justify-content-center row p-4 m-2 mt-4 bg-body-tertiary rounded-3 border mainDiv">
    <h4 class="col-md-8">Customers list</h4>
    <hr class="col-md-8">
    <div class="col-md-8">
        <p></p>
        @if (Model.Count() == 0)
        {
            <p>There are no posts</p>
        }
        else
        {
            <ul class="list-group">
                @foreach (Customer c in Model)
                {
                    <li class="container list-group-item list-group-item-action list-group-item-light">
                        <br>
                        <div class="row">
                            <h5 lass="text-uppercase font-weight-bold">@c.CompanyName</h5>
                            <div class="col  ps-3"><span class="discountDetails">Address:</span>
                                <p id="customerDetails" class="customerDetails"><span class="flag">@c.Address</span><br>@c.City,
                                    @c.Region @c.PostalCode<br>@c.Country</p>
                            </div>
                            <div class="col border-start ps-3">
                                <span class="discountDetails">Contact:<br></span>
                                <p class="customerDetailsContact"><span>Tlf:</span><span class="flagC">@c.Phone</span><br><span>Fax:</span><span class="flagC">@c.Fax</span></p>
                            </div>
                        </div>

                    </li>
                }
            </ul>
        }
    </div>
</div>
<script type="text/javascript" src="~/customer.js"></script>
